<UserControl
    Background="#1b1827"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="GUI.Views.UserControls.CreateUserView"
    x:DataType="vm:CreateUserViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:GUI.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.DataContext>
        <vm:CreateUserViewModel />
    </UserControl.DataContext>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label
            Content="Create user"
            FontSize="40"
            Foreground="White"
            HorizontalAlignment="Center" />
        <StackPanel>

            <!--  UserName Input  -->
            <TextBox
                FontSize="22"
                Foreground="White"
                Margin="0,20,0,0"
                MaxWidth="400"
                Text="{Binding UserName}"
                Watermark="Username" />

            <!--  Password Input  -->
            <StackPanel>
                <TextBox
                    FontSize="22"
                    Foreground="White"
                    Margin="0,20,0,0"
                    MaxWidth="400"
                    PasswordChar="*"
                    Text="{Binding PassWord}"
                    Watermark="Password" />
            </StackPanel>

            <TextBox
                FontSize="22"
                Foreground="White"
                Margin="0,20,0,0"
                MaxWidth="400"
                PasswordChar="*"
                Text="{Binding RepeatPassword}"
                Watermark="Password again" />

            <!--  Corporate or Private Buttons  -->
            <WrapPanel
                HorizontalAlignment="Center"
                Margin="10"
                VerticalAlignment="Center">
                <RadioButton
                    Command="{Binding Path=IsCorporateCommand}"
                    Content="Corporate"
                    FontSize="23"
                    Foreground="White"
                    Width="150"
                    x:Name="IsCorporateButton" />

                <RadioButton
                    Command="{Binding IsPrivateCommand}"
                    Content="Private"
                    FontSize="23"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Width="150"
                    x:Name="IsPrivateteButton" />

                <!--  CorporateInfo  -->
                <WrapPanel
                    HorizontalAlignment="Center"
                    IsVisible="{Binding Path=IsChecked, ElementName=IsCorporateButton, Mode=TwoWay}"
                    VerticalAlignment="Top"
                    x:Name="CorporateInfo">

                    <TextBox
                        FontSize="22"
                        Foreground="White"
                        Text="{Binding CvrNumber, Mode=TwoWay}"
                        VerticalAlignment="Top"
                        Watermark="CVR"
                        Width="160" />

                    <TextBox
                        FontSize="22"
                        Foreground="White"
                        Margin="22,0,0,0"
                        MaxLength="5"
                        Text="{Binding ZipCode, Mode=TwoWay}"
                        VerticalAlignment="Top"
                        Watermark="Zip code"
                        Width="150" />
                </WrapPanel>

                <!--  PrivateUserInfo  -->
                <WrapPanel
                    HorizontalAlignment="Center"
                    IsVisible="{Binding Path=IsChecked, ElementName=IsPrivateteButton, Mode=TwoWay}"
                    x:Name="PrivateUserInfo">

                    <TextBox
                        FontSize="22"
                        Foreground="White"
                        MaxLength="10"
                        Text="{Binding CprNumber, Mode=TwoWay}"
                        VerticalAlignment="Top"
                        Watermark="Cpr number"
                        Width="160" />

                    <TextBox
                        FontSize="22"
                        Foreground="White"
                        Margin="22,0,0,0"
                        MaxLength="5"
                        Text="{Binding ZipCode, Mode=TwoWay}"
                        VerticalAlignment="Top"
                        Watermark="Zip code"
                        Width="150" />
                </WrapPanel>
            </WrapPanel>

            <!--  Create And Cancel Buttons  -->
            <WrapPanel HorizontalAlignment="Center">
                <Button Command="{Binding Path=CancelCommand}" Margin="0,0,40,0">
                    <Label
                        Content="Cancel"
                        FontSize="23"
                        Foreground="White" />
                </Button>

                <Button
                    Command="{Binding Path=CreateCommand}"
                    IsEnabled="{Binding Path=BtnCreateEnabled}"
                    Margin="40,0,0,0">
                    <Label
                        Content="Create"
                        FontSize="23"
                        Foreground="White" />
                </Button>
            </WrapPanel>
        </StackPanel>

    </StackPanel>
</UserControl>